# API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# LLM Configuration
LLM_PROVIDER=openai
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.1

# Embeddings
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# Chunking
CHUNK_SIZE=800
CHUNK_OVERLAP=150
SEMANTIC_BUFFER_SIZE=1
SEMANTIC_BREAKPOINT_THRESHOLD=95

# Vector Store
VECTORSTORE_TYPE=chroma
COLLECTION_NAME=kudo_arbitrage

# Retrieval
TOP_K=5
SIMILARITY_THRESHOLD=0.7
USE_RERANKING=false
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# Generation
MAX_TOKENS=2000
ENABLE_CITATIONS=true
RESPONSE_LANGUAGE=fr

# Docling
DOCLING_EXTRACT_TABLES=true
DOCLING_EXTRACT_IMAGES=false
DOCLING_OCR_ENABLED=true

# GPU Configuration
USE_GPU=true
EMBEDDING_BATCH_SIZE=64  # Pour RTX 4070 (12GB VRAM)
OCR_BATCH_SIZE=4

# Logging
LOG_LEVEL=INFO

# LangFuse Observability (optional - for tracing and debugging)
# Sign up at https://cloud.langfuse.com for free tier
LANGFUSE_ENABLED=false
LANGFUSE_PUBLIC_KEY=pk-lf-...
LANGFUSE_SECRET_KEY=sk-lf-...
LANGFUSE_HOST=https://cloud.langfuse.com

# API
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
